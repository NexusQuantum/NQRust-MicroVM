{
  "lock": false,
  "nodeModulesDir": "auto",
  "tasks": {
    "dev": "deno run -A npm:next@15 dev",
    "build": "deno run -A npm:next@15 build", 
    "export": "deno run -A npm:next@15 export",
    "start": "deno run -A npm:next@15 start",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "typecheck": "deno check --all --node-modules-dir ./app/* ./components/* ./lib/* ./types/* ./app.d.ts"
  },
  "lint": { 
    "rules": { 
      "include": ["recommended"] 
    },
    "exclude": ["node_modules/", ".next/", "out/"]
  },
  "fmt": { 
    "useTabs": false, 
    "lineWidth": 100, 
    "semiColons": true, 
    "singleQuote": false,
    "exclude": ["node_modules/", ".next/", "out/"]
  }
}
